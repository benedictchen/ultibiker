{
  "name": "@ultibiker/server",
  "version": "0.1.0",
  "description": "UltiBiker Server - Node.js backend with sensor management",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/server.ts",
    "build": "npm run build:assets && tsc && cp -r public dist/",
    "build:assets": "node scripts/build-assets.js",
    "start": "node dist/server.js",
    "db:setup": "npm run db:generate && npm run db:migrate",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "drizzle-kit up:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run tests/**/*.test.ts --exclude tests/{integration,e2e,performance}/**",
    "test:integration": "vitest run tests/integration/**/*.test.ts",
    "test:api": "vitest run tests/api/**/*.test.ts",
    "test:sensors": "vitest run tests/sensors/**/*.test.ts",
    "test:services": "vitest run tests/services/**/*.test.ts",
    "test:websocket": "vitest run tests/websocket/**/*.test.ts",
    "test:database": "vitest run tests/database/**/*.test.ts",
    "test:performance": "vitest run tests/performance/**/*.test.ts --testTimeout=120000",
    "test:e2e": "playwright test tests/e2e/**/*.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "tsx tests/test-runner.ts",
    "test:all:coverage": "tsx tests/test-runner.ts --coverage",
    "test:all:verbose": "tsx tests/test-runner.ts --verbose",
    "test:quick": "tsx tests/test-runner.ts unit api sensors",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --apply src/",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@ultibiker/core": "workspace:*",
    "@abandonware/noble": "^1.9.2-26",
    "@paralleldrive/cuid2": "^2.2.2",
    "@playwright/test": "^1.55.0",
    "@sentry/node": "^10.7.0",
    "@sentry/profiling-node": "^10.7.0",
    "@types/noble": "^0.0.44",
    "ant-plus-next": "^0.3.2",
    "better-sqlite3": "^9.2.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.29.3",
    "envalid": "^8.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.1",
    "node-mac-permissions": "^2.5.0",
    "socket.io": "^4.8.1",
    "usb": "^2.16.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/bun": "^1.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/morgan": "^1.9.10",
    "@types/supertest": "^6.0.2",
    "@vitest/ui": "^1.1.3",
    "bootstrap": "^5.3.8",
    "chart.js": "^4.5.0",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.20.8",
    "jsdom": "^26.1.0",
    "playwright": "^1.40.1",
    "socket.io-client": "^4.7.4",
    "supertest": "^7.1.3",
    "toastify-js": "^1.12.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.3"
  }
}