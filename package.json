{
  "name": "ultibiker-monorepo",
  "version": "0.1.0",
  "description": "UltiBiker - Multi-platform Cycling Sensor Data Aggregation Platform",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @ultibiker/server dev",
    "build": "pnpm --recursive run build",
    "build:core": "pnpm --filter @ultibiker/core build",
    "build:server": "pnpm --filter @ultibiker/server build",
    "start": "pnpm --filter @ultibiker/server start",
    "db:setup": "pnpm --filter @ultibiker/server db:setup",
    "db:generate": "pnpm --filter @ultibiker/server db:generate",
    "db:migrate": "pnpm --filter @ultibiker/server db:migrate",
    "db:studio": "pnpm --filter @ultibiker/server db:studio",
    "db:drop": "pnpm --filter @ultibiker/server db:drop",
    "test": "pnpm --recursive run test",
    "test:ui": "pnpm --filter @ultibiker/server test:ui",
    "test:run": "pnpm --recursive run test:run",
    "test:coverage": "pnpm --recursive run test:coverage",
    "test:watch": "pnpm --filter @ultibiker/server test:watch",
    "test:unit": "pnpm --filter @ultibiker/server test:unit",
    "test:integration": "pnpm --filter @ultibiker/server test:integration",
    "test:api": "pnpm --filter @ultibiker/server test:api",
    "test:sensors": "pnpm --filter @ultibiker/server test:sensors",
    "test:services": "pnpm --filter @ultibiker/server test:services",
    "test:websocket": "pnpm --filter @ultibiker/server test:websocket",
    "test:database": "pnpm --filter @ultibiker/server test:database",
    "test:performance": "pnpm --filter @ultibiker/server test:performance",
    "test:e2e": "pnpm --filter @ultibiker/server test:e2e",
    "test:e2e:ui": "pnpm --filter @ultibiker/server test:e2e:ui",
    "test:all": "pnpm --filter @ultibiker/server test:all",
    "test:all:coverage": "pnpm --filter @ultibiker/server test:all:coverage",
    "test:all:verbose": "pnpm --filter @ultibiker/server test:all:verbose",
    "test:quick": "pnpm --filter @ultibiker/server test:quick",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "check": "pnpm --recursive run check",
    "type-check": "pnpm --recursive run type-check"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "tsx": "^4.20.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
