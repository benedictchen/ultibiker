# UltiBiker Environment Configuration Template
# Copy this file to .env and update with your actual values

# Development environment
NODE_ENV=development

# Server configuration
PORT=3000
HOST=localhost

# Database
DATABASE_URL=./ultibiker.db

# Logging
LOG_LEVEL=debug

# Security Configuration - REQUIRED FOR PRODUCTION
# Generate secure random strings for these values
# Use: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here
HEALTH_CHECK_TOKEN=your_health_check_token_here

# ANT+ Configuration
ANT_STICK_ENABLED=true

# Bluetooth Configuration
BLE_ENABLED=true

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Optional: Sentry Configuration
SENTRY_DSN=

# Optional: Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: Third-party API keys
STRAVA_CLIENT_ID=
STRAVA_CLIENT_SECRET=

# Performance monitoring
ENABLE_PROFILING=false
ENABLE_DEV_LOGGING=true
ENABLE_API_DOCS=true